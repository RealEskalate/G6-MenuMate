{
  "info": {
    "name": "MenuMate Review & Reaction Endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Create Review",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": { "raw": "{{baseUrl}}/reviews", "host": ["{{baseUrl}}"], "path": ["reviews"] },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"item_id\": \"ITEM_ID\",\n  \"restaurant_id\": \"RESTAURANT_ID\",\n  \"picture\": \"https://example.com/image.jpg\",\n  \"description\": \"Great food!\",\n  \"rating\": 5\n}"
        }
      }
    },
    {
      "name": "Update Review",
      "request": {
        "method": "PATCH",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": { "raw": "{{baseUrl}}/reviews/:id", "host": ["{{baseUrl}}"], "path": ["reviews", ":id"] },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"item_id\": \"ITEM_ID\",\n  \"restaurant_id\": \"RESTAURANT_ID\",\n  \"picture\": \"https://example.com/image.jpg\",\n  \"description\": \"Updated review!\",\n  \"rating\": 4\n}"
        }
      }
    },
    {
      "name": "Delete Review",
      "request": {
        "method": "DELETE",
        "url": { "raw": "{{baseUrl}}/reviews/:id", "host": ["{{baseUrl}}"], "path": ["reviews", ":id"] }
      }
    },
    {
      "name": "Get Review By ID",
      "request": {
        "method": "GET",
        "url": { "raw": "{{baseUrl}}/reviews/:id", "host": ["{{baseUrl}}"], "path": ["reviews", ":id"] }
      }
    },
    {
      "name": "List Reviews By Item",
      "request": {
        "method": "GET",
        "url": { "raw": "{{baseUrl}}/items/:item_id/reviews", "host": ["{{baseUrl}}"], "path": ["items", ":item_id", "reviews"] }
      }
    },
    {
      "name": "Get Average Rating By Item",
      "request": {
        "method": "GET",
        "url": { "raw": "{{baseUrl}}/items/:item_id/average-rating", "host": ["{{baseUrl}}"], "path": ["items", ":item_id", "average-rating"] }
      }
    },
    {
      "name": "Get Average Rating By Restaurant",
      "request": {
        "method": "GET",
        "url": { "raw": "{{baseUrl}}/restaurants/v/:restaurant_id/average-rating", "host": ["{{baseUrl}}"], "path": ["restaurants", "v", ":restaurant_id", "average-rating"] }
      }
    },
    {
      "name": "Save Reaction",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": { "raw": "{{baseUrl}}/items/:item_id/reaction", "host": ["{{baseUrl}}"], "path": ["items", ":item_id", "reaction"] },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"reaction_type\": \"like\" // or \"dislike\"\n}"
        }
      }
    },
    {
      "name": "Get Reaction Stats",
      "request": {
        "method": "GET",
        "url": { "raw": "{{baseUrl}}/items/:item_id/reaction", "host": ["{{baseUrl}}"], "path": ["items", ":item_id", "reaction"] }
      }
    }
  ]
}
