{
  "info": {
    "name": "Review Endpoints",
    "description": "Postman collection for Review-related API endpoints.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Create Review",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"item_id\": \"{{item_id}}\",\n  \"picture\": \"https://example.com/image.jpg\",\n  \"description\": \"Great food and service!\",\n  \"rating\": 5\n}"
        },
        "url": {
          "raw": "http://localhost:8080/api/v1/reviews",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "v1", "reviews"]
        }
      }
    },
    {
      "name": "Get Review by ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:8080/api/v1/reviews/{{review_id}}",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "v1", "reviews", "{{review_id}}"]
        }
      }
    },
    {
      "name": "List Reviews by Item",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:8080/api/v1/items/{{item_id}}/reviews",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "v1", "items", "{{item_id}}", "reviews"]
        }
      }
    },
    {
      "name": "Get Average Rating by Item",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:8080/api/v1/items/{{item_id}}/average-rating",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "v1", "items", "{{item_id}}", "average-rating"]
        }
      }
    },
    {
      "name": "Get Average Rating by Restaurant",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:8080/api/v1/restaurants/v/{{restaurant_id}}/average-rating",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "v1", "restaurants", "v", "{{restaurant_id}}", "average-rating"]
        }
      }
    },
    {
      "name": "Update Review",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"picture\": \"https://example.com/updated.jpg\",\n  \"description\": \"Updated review comment.\",\n  \"rating\": 4\n}"
        },
        "url": {
          "raw": "http://localhost:8080/api/v1/reviews/{{review_id}}",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "v1", "reviews", "{{review_id}}"]
        }
      }
    },
    {
      "name": "Delete Review",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "http://localhost:8080/api/v1/reviews/{{review_id}}",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "v1", "reviews", "{{review_id}}"]
        }
      }
    }
  ]
}
